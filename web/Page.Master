<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Page.master.cs" Inherits="web.Page" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link rel="icon" href="files/rickcraft.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="files/rickcraft.ico" type="image/x-icon" />
    <title></title>
    
        <style>
            @font-face {
                font-family: sans-serif;
                font-weight: normal;
                font-style: normal;
            }

            .contenedor-pagem {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 15px 25px;
                background-color: #2c3e50; 
                font-family: sans-serif;
                color: #ccc; 
            }
            .usuario-container {
                width: 400px;
                display: flex;
                align-items: center;
                gap: 10px;
                margin-right: 50px;
                justify-content: flex-end;
            }   

            .izq-container {
                width: 400px; 
                display: flex;
                align-items: center;
                justify-content: flex-start;
                margin-left: 50px;
            }

            .nombre-usuario {
                font-size: 1em;

                /* nombre largo */
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                display: inline-block;
                vertical-align: middle;
            }

            .contenedor-pagem img {
                height: 50px; 
                width: auto;  
            }

            .contenedor-pagem .text-center {
                flex: 1;
                text-align: center;
                font-size: 1.6em;
                font-weight: bold;
            }

            .hrpagem {
                margin: 0;
                border: none;
                border-top: 2px solid #ccc;
            }
            .contenido {
                padding-top: 20px;
            }

            .imagen-logo {
                max-height: 35%;
                max-width: 35%;
                height: auto;
                width: auto;
                object-fit: contain;
            }

        </style>

    <asp:ContentPlaceHolder ID="head" runat="server">  
    </asp:ContentPlaceHolder>
    
</head>
<body>
    <form id="form1" runat="server">
        <asp:ScriptManager ID="scrpMng" runat="server" />

        <div class="contenedor-pagem">
            <div class="izq-container">
                <asp:ImageButton ID="ImgTitulo" runat="server" ImageUrl="files/titulo.png" CssClass="imagen-logo" OnClick="BotonTitulo_Click" />
            </div>

            <div class="text-center">BIENVENIDOS</div>
            
            <div class="usuario-container">
                <span class="nombre-usuario">Nombre Usuario</span>
                <img src="files/usuario.png" alt="Usuario" />
            </div>

        </div>
        <hr class="hrpagem" />

        <div class="contenido">
            <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
            </asp:ContentPlaceHolder>
        </div>

    </form>
</body>
</html>